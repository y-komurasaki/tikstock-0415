 <div class="container">
  <p>
    <%= form_with(url: search_stocks_path, local: true, method: :get, class: "search-form") do |form| %>
    <div class="input-group">
      <%= form.text_field :keyword, placeholder: "投稿を検索する",class: "search-input", class: "form-control" %>
      <%= form.submit "検索", class: "search-btn", class: "btn btn-primary __web-inspector-hide-shortcut__"%>
    </div>
  </p>
    <% end %>  
  
 </div>
  
  <div class="album py-5 bg-light" >
    <div class="container">
        <div class="row">
          <% @stocks.each do |stock| %>
              <div class="col-md-4">
                <div class="card mb-4 shadow-sm">                         
                    <p class="card-text"><div>商品名</div> <%= stock.item_name %></p>
                    <%= image_tag stock.image, class:"bd-placeholder-img card-img-top", width:"100%", height:"225", preserveAspectRatio:"xMidYMid slice" %>  
                    <p class="card-text"><div class='stock-info'>商品情報</div><%= stock.info %></p>
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="btn-group">
                        <p>
                        <%= link_to '見る', stock_path(stock.id), class:"btn bg-light btn-outline-secondary", method: :"get" %>
                        <button type="button" class="btn bg-light btn-outline-secondary">編集</button>
                        </p>
                      </div>
                        <p class="stock-quantity">
                      <div>数量</div>
                      <div class="col-md-4">
                        <p class="border">
                          <%= stock.stock_quantity %>
                        </p>
                      </div>
                   </div>   
                </div>                        
            </div>  
          <% end %>
        </div>
    </div>
  </div>